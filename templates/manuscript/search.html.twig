{% extends 'base.html.twig' %}

{% block title %}Search Manuscripts{% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'manuscript', 'show': 'Search'} %}
{% endblock %}

{% block pageheader %}
    <h1>Manuscript Search</h1>
    {% if manuscripts|length > 0 %}
        {% include 'partial/count.html.twig' with {'index': manuscripts, 'label': 'manuscripts'} %}
    {% endif %}
{% endblock %}

{% block body %}

    {% include 'manuscript/partial/search-form.html.twig' %}

    {% if manuscripts|length > 0 %}
        {% include 'manuscript/partial/gallery.html.twig' %}
    {% else %}
        {% embed 'partial/search-no-results.html.twig' %}
        {% endembed %}
    {% endif %}

    {% if manuscripts|length > 0 %}
    <div class="navigation">
        {{ knp_pagination_render(manuscripts) }}
    </div>
    {% endif %}
{% endblock %}

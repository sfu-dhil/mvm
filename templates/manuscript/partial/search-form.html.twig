{% set params = app.request.uri|split('?') %}
{% set params = params|length > 1 ? '?' ~ params[1] : null %}
{{ form_start(form, {'method': 'GET', 'action': path('manuscript_search')}) }}
<div class='form-group'>
    <label class='col-sm-2 control-label sr-only' for='q'>Search term</label>
    <div class='col-sm-12'>
        <div class='input-group'>
            <input type='text' name='q' id='q' class='form-control' value='{{ q|default('') }}'>
            <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class='glyphicon glyphicon-search'></span>
                            Search
                        </button>
                    </span>
        </div>
    </div>
</div>
<details class="accordion">
    <summary>
        <span class="icon">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-right" fill="currentColor"
             xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                  d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
        </svg>
        </span>
        Search Options
    </summary>
    {{ form_rest(form) }}
</details>
<button type="submit">Submit</button>
{{ form_end(form) }}

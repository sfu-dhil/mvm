{% extends 'base.html.twig' %}

{% block title %}Theme Edit{% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'theme', 'show': 'Edit'} %}
{% endblock %}

{% block pageheader %}
    <h1>Theme Edit</h1>
{% endblock %}

{% block body %}
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <div class="text-center">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a href="{{ path('theme_show', {'id': theme.id}) }}" class="btn btn-warning">Cancel</a>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}

{% block javascripts %}
    {% include '@NinesEditor/editor/widget.html.twig' %}
{% endblock %}

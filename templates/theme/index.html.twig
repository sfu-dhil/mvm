{% extends 'base.html.twig' %}

{% block title %}Theme List{% endblock %}

{% block pageheader %}
    <h1>Themes</h1>
    <p>Themes prominent among the manuscript contents are identified, using a standardized list</p>
    {% include 'partial/count.html.twig' with {'index': themes, 'label': 'themes'} %}
{% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'theme'} %}
{% endblock %}

{% block action_buttons %}
    {% include 'partial/toolbar.html.twig' with {'new': 'theme_new'} %}
{% endblock %}

{% block body %}
    {% include 'theme/partial/search-form.html.twig' %}
    {% include 'theme/partial/index.html.twig' %}
    <div class="navigation">
        {{ knp_pagination_render(themes) }}
    </div>
{% endblock %}

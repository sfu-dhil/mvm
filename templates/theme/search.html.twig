{% extends 'base.html.twig' %}

{% block title %}Theme Search{% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'theme', 'show': 'Search'} %}
{% endblock %}

{% block pageheader %}
    <h1>Theme Search</h1>
    {% if q %}
        {% include 'partial/count.html.twig' with {'index': themes, 'label': 'themes'} %}
    {% endif %}
{% endblock %}

{% block body %}
    {% include 'theme/partial/search-form.html.twig' %}
    {% if themes|length > 0 %}
        {% include 'theme/partial/index.html.twig' %}
    {% else %}
        {% include 'partial/search-no-results.html.twig' %}
    {% endif %}
    {% if q %}
        <div class="navigation">
            {{ knp_pagination_render(themes) }}
        </div>
    {% endif %}
{% endblock %}

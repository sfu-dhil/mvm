{% extends 'base.html.twig' %}

{% block title %} {{ theme.label }} {% endblock %}

 {% block pageheader %}
     {% include 'partial/term-index.html.twig' with {'term':theme, 'prefix': 'Theme'} %}
 {% endblock %}

 {% block breadcrumb %}
     {% include 'partial/breadcrumb.html.twig' with {'index': 'theme', 'show': theme} %}
 {% endblock %}

{% block admin %}
    {% include 'partial/toolbar.html.twig' with {'edit': 'theme_edit', 'delete': 'theme_delete', 'id': theme.id} %}
{% endblock %}

{% block body %}
    {% set majorContent %}
        {% include 'manuscript/partial/gallery.html.twig' with {'manuscripts': theme.majorManuscripts} %}
    {% endset %}

    {% set otherContent %}
        {% include 'manuscript/partial/gallery.html.twig' with {'manuscripts': theme.otherManuscripts} %}
    {% endset %}

    {% set tabs = {
        'Major Uses': majorContent,
        'Other Uses': otherContent,
    } %}

    {% include 'partial/tabs.html.twig' with {'tabs': tabs} %}

{% endblock %}

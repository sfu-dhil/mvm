{% extends 'base.html.twig' %}

{% block title %}Poem Contributions{% endblock %}


 {% block pageheader %}
     <h1>Poem Contributions</h1>
     <p>Describe the contributions to {{ content }} below.</p>
 {% endblock %}

{% block body %}

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <div class="text-center">
        <button type="submit" name="submit" value="draft" class="btn btn-primary">Save</button>
        <a href="{{ path('content_show', {'id': content.id}) }}" class="btn btn-warning">Cancel</a>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}


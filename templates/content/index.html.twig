{% extends 'base.html.twig' %}

{% block title %}Poems{% endblock %}

{% block pageheader %}
    <h1>Poems</h1>
    <p>A selection of poems notable for frequency of appearance, significance to their miscellany context, or
        meta-reflection on the subject of compiling a poetry book</p>
    {% include 'partial/count.html.twig' with {'index': contents, 'label': 'poems'} %}
{% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'content', 'index_label': 'Poems'} %}
{% endblock %}

{% block admin %}
    {% include 'partial/toolbar.html.twig' with {'new': 'content_new'} %}
{% endblock %}

{% block body %}
    {% include 'partial/search-form.html.twig' with {'path': path('content_search'), 'q': ''} %}
    {% include 'content/partial/index.html.twig' %}

    <div class="navigation">
        {{ knp_pagination_render(contents) }}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Poem Search{% endblock %}


{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'content', 'index_label': 'Poems', 'show': 'Search'} %}
{% endblock %}

{% block pageheader %}
    <h1>Poem Search</h1>
    {% if q %}
        {% include 'partial/count.html.twig' with {'index': contents, 'label': 'contents'} %}
    {% endif %}
{% endblock %}

{% block body %}

    {% include 'content/partial/search-form.html.twig' %}

    {% if contents|length > 0 %}
        {% include 'content/partial/index.html.twig' %}
    {% else %}
        {% include 'partial/search-no-results.html.twig' %}
    {% endif %}

    {% if q %}
        <div class="navigation">
            {{ knp_pagination_render(contents) }}
        </div>
    {% endif %}

{% endblock %}

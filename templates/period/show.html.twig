{% extends 'base.html.twig' %}

{% block title %}{{ period.label }}{% endblock %}

 {% block pageheader %}
     {% include 'partial/term-index.html.twig' with {'term': period} %}
 {% endblock %}


 {% block breadcrumb %}
     {% include 'partial/breadcrumb.html.twig' with {'index': 'period', 'show': period.label} %}
 {% endblock %}

{% block action_buttons %}
    {% include 'partial/toolbar.html.twig' with {'edit':'period_edit', 'delete': 'period_delete', 'id': period.id} %}
{% endblock %}

{% block body %}
    {% include 'partial/tabs.html.twig' with {
        'tabs':{
            'Manuscripts': include('manuscript/partial/gallery.html.twig', {'manuscripts': period.manuscripts}|raw),
            'Coteries': include('coterie/partial/index.html.twig', {coteries: period.coteries})|raw
        }
    } %}
{% endblock %}

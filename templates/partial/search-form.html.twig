<form method="get" action="{{ path }}" class="form-horizontal">
    <fieldset>
        <legend class="visually-hidden">Search</legend>
        <div class='form-group'>
            <label class='col-sm-2 control-label visually-hidden' for='q'>Search term</label>
            <div class='col-sm-12'>
                <div class='input-group'>
                    <input type='text' name='q' id='q' class='form-control' value='{{ q|default('') }}'>
                    <span class="input-group-btn">
                        <button class="btn btn-light" type="submit">
                            <i class="bi bi-search"></i>
                            Search
                        </button>
                    </span>
                </div>
                {% if help is defined %}
                    <p class="help-block">{{ help }}</p>
                {% endif %}
            </div>
        </div>
        {% if extra is defined %}
            {{ extra }}
        {% endif %}
    </fieldset>
</form>

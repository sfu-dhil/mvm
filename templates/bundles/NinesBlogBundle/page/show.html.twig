{% extends '@!NinesBlog/page/show.html.twig' %}

 {% block breadcrumb %}
     {% include 'partial/breadcrumb.html.twig'
         with {'index_path': path('nines_blog_page_index'), 'index_label': 'About', 'show': page} %}
 {% endblock %}

{% block admin %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('nines_blog_page_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('nines_blog_page_edit', { 'id': page.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('nines_blog_page_delete', { 'id': page.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Page?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="blog_page">
        {{ page.content | raw }}
    </section>
    {% include 'partial/next-prev.html.twig' %}
{% endblock %}
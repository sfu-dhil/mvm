{% extends '@!NinesBlog/page/show.html.twig' %}

 {% block breadcrumb %}
     {% include 'partial/breadcrumb.html.twig' with {'index_path': path('nines_blog_page_index'), 'index_label': 'About', 'show': page} %}
 {% endblock %}

{% block admin %}
    <div class="btn-toolbar">
        <div class="btn-group ms-auto">
            <a href="{{ path('nines_blog_page_index') }}" class="btn btn-light">
                <span class="bi bi-arrow-left"></span> Back
            </a>
            <a href="{{ path('nines_blog_page_edit', {'id': page.id}) }}" class="btn btn-light">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a href="{{ path('nines_blog_page_delete', {'id': page.id}) }}" class="btn btn-light" data-confirm="Are you sure you want to delete this Page?">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="blog_page">
        {{ page.content|raw }}
    </section>
    {% include 'partial/next-prev.html.twig' %}
{% endblock %}
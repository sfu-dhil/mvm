{% extends '@!NinesBlog/page/index.html.twig' %}


{% block pageheader %}
    <h1>About</h1>
{% endblock %}

{% block action_buttons %}
    <div class='btn-toolbar'>
        <div class='btn-group ms-auto'>

            <a href="{{ path('nines_blog_page_new') }}" class="btn btn-light">
                <i class="bi bi-plus-lg"></i> New
            </a>
            <a href="{{ path('nines_blog_page_sort') }}" class="btn btn-light">
                <i class="bi bi-arrow-down-up"></i> Sort
            </a>
            <a href="{{ path('nines_blog_page_search') }}" class="btn btn-light">
                <i class="bi bi-search"></i> Search
            </a>
        </div>
    </div>

{% endblock %}

{% block body %}
    <div class="gallery">
        {% for page in pages %}
            {% embed 'partial/gallery-item.html.twig' %}
                {% block item_heading %}<a href="{{ path('nines_blog_page_show', {'id': page.id}) }}">{{ page.title }}</a>{% endblock %}
                {% block item_body %}
                    {{ page.excerpt|raw }}
                {% endblock %}
            {% endembed %}
        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pages) }}
    </div>
{% endblock %}

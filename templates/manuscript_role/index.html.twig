{% extends 'base.html.twig' %}

{% block title %}Manuscript Role List{% endblock %}

{% block pageheader %}
    <h1>Manuscript Contributions</h1>
    <p>Roles played by individuals in relation to manuscript miscellanies</p>
    {% include 'partial/count.html.twig' with {'index': manuscriptRoles, 'label': 'manuscript roles'} %}
{% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'manuscript_role', 'index_label': 'Manuscript Roles'} %}
{% endblock %}

{% block admin %}
    {% include 'partial/toolbar.html.twig' with {'new': 'manuscript_role_new'} %}
{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Description</th>
                <th>Contributions</th>
            </tr>
        </thead>
        <tbody>
            {% for role in manuscriptRoles %}
                <tr>
                    <td><a href="{{ path('manuscript_role_show', {'id': role.id}) }}">{{ role.label }}</a></td>

                    <td>{{ role.description|raw }}</td>
                    <td class="number">{{ role.contributions|length }}</td>
                </tr>

            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(manuscriptRoles) }}
    </div>

{% endblock %}

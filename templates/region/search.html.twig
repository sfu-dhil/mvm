{% extends 'base.html.twig' %}

{% block title %}Region Search{% endblock %}

{% block breadcrumb %}
{% include 'partial/breadcrumb.html.twig' with {'index': 'region', 'show': 'Search'} %}
{% endblock %}

{% block pageheader %}
    <h1>Region Search</h1>
    {% if q %}
    {% include 'partial/count.html.twig' with {'index': regions, 'label': 'regions'} %}
    {% endif %}
{% endblock %}

{% block body %}

    {% include 'partial/search-form.html.twig' with {'path': path('region_search')} %}
    {% if regions|length > 0 %}
        {% include 'region/partial/index.html.twig' %}
    {% else %}
        {% include 'partial/search-no-results.html.twig' %}
    {% endif %}
    
    {% if q %}
        <div class="navigation">
            {{ knp_pagination_render(regions) }}
        </div>
    {% endif %}

{% endblock %}

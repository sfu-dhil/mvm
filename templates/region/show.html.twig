{% extends 'base.html.twig' %}


{% block title %}{{ region.name }}{% endblock %}

 {% block pageheader %}
     <h1>{{ region.name }}</h1>
 {% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig'
        with {'index': 'region', 'show':region.name} %}
{% endblock %}


{% block action_buttons %}
    {% include 'partial/toolbar.html.twig' with {'edit': 'region_edit', 'delete': 'region_delete', 'id': region.id} %}
{% endblock %}

{% block body %}
    {% include 'partial/tabs.html.twig' with {'tabs':
        {
            'Manuscripts': include('manuscript/partial/gallery.html.twig', {'manuscripts': region.manuscripts})|raw,
            'Print Sources': include('print_source/partial/index.html.twig', {'printSources': region.printSources})|raw,
            'Coteries': include('coterie/partial/index.html.twig', {'coteries': region.coteries})|raw
        }
    } %}
{% endblock %}
